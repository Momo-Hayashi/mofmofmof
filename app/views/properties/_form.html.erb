<%= form_with(model:@property, local: true, url:new_or_edit) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @property.error.full_messages.each do |msg| %>
          <li><%= msg =%></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p><%= f.label :物件名 %></p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :賃料 %></p>
  <p><%= f.text_field :price %>円</p>
  <p><%= f.label :住所 %></p>
  <p><%= f.text_field :address %></p>
  <p><%= f.label :築年数 %></p>
  <p><%= f.text_field :years_old %>年</p>
  <p><%= f.label :備考 %></p>
  <p><%= f.text_field :note %></p>

  <%= f.fields_for :closest_stations do |cs| %>
  <h3>最寄り駅<%= cs.index + 1 %></h3>
    <p><%= cs.label :line, '路線' %></p>
    <p><%= cs.text_field :line %></p>
    <p><%= cs.label :station, '駅名' %></p>
    <p><%= cs.text_field :station %></p>
    <p><%= cs.label :distance, '徒歩分数' %></p>
    <p><%= cs.text_field :distance %>分</p>
  <% end %>
  <p><%= f.submit %></p>
  <p><%= link_to 'Back to Home', properties_path %></p>
<% end %>
