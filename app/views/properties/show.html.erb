<h1>物件詳細</h1>
<p>物件名： <%= @property.name %></p>
<p>賃料： <%= @property.price %></p>
<p>住所： <%= @property.address %></p>
<p>築年数： <%= @property.years_old %></p>
<p>備考： <%= @property.note %></p>

<% if @closest_stations.present? %>
  <% n = 0 %>
  <% @closest_stations.each do |cs| %>
    <h4>最寄り駅<%= n += 1 %></h4>
      <p>路線名： <%= cs.line %></p>
      <p>駅名： <%= cs.station %></p>
      <p>徒歩分数： <%= cs.distance %>分</p>
  <% end %>
<% end %>
<%= link_to 'Back to Home', properties_path %>
